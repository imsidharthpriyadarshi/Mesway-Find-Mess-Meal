<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_location_list"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@drawable/outline_pin_drop_24"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/t_location_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Delhi"
        app:layout_constraintStart_toEndOf="@+id/img_location_list"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp_20"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_16"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:id="@+id/t_location_secondary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="New Delhi"
        app:layout_constraintStart_toStartOf="@+id/t_location_main"
        app:layout_constraintTop_toBottomOf="@+id/t_location_main"
        android:textSize="@dimen/dp_13"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
      />


</androidx.constraintlayout.widget.ConstraintLayout>