<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dp_2"
    android:background="@drawable/bg_notification"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/img_meal"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_13"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_check_box_20"
        app:layout_constraintBottom_toBottomOf="@+id/t_date_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/t_title_notification"
        app:tint="@color/green" />

    <TextView
        android:id="@+id/t_title_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:text="Welcome to Mealko"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_meal"
        app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/t_date_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/t_title_notification"
            app:layout_constraintTop_toBottomOf="@+id/t_title_notification"
            android:text="12/02/2023"
            android:layout_marginTop="@dimen/dp_7"
            android:textSize="@dimen/dp_14" />








</androidx.constraintlayout.widget.ConstraintLayout>