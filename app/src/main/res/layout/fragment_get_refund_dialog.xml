<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.meals.GetRefundDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@drawable/grey_background"
        android:elevation="@dimen/dp_10"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Give Tiffin - Get Refund"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_25"

        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you have got your refund back only then check yes and click \'Yes I have received\'."
            android:textColor="@color/black"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_40"
            android:textSize="@dimen/dp_20"

            />

        <CheckBox
            android:id="@+id/check_box_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="Yes, i have received my full refund"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/dp_16"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_yes_i_received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="** Once You Click \'Yes, I have received\' then you can not claim your refund again "
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="@+id/btn_yes_i_received"
                app:layout_constraintBottom_toTopOf="@+id/btn_yes_i_received"
                android:textSize="@dimen/dp_12"

                />

        <Button
            android:id="@+id/btn_yes_i_received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes, I have Received"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/dp_15"

            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</ScrollView>