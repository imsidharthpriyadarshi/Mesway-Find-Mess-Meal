<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.settings.ContactUsFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >
              <ImageView
                  android:id="@+id/img_back_arrow"
                  android:layout_width="@dimen/dp_36"
                  android:layout_height="@dimen/dp_36"
                  android:src="@drawable/baseline_chevron_left_36"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:tint="@color/white" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:text="Contact Us"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:gravity="center"
                  android:fontFamily="sans-serif-medium"
                  android:textColor="@color/white"
                  android:textSize="@dimen/dp_23"

                  />


          </androidx.constraintlayout.widget.ConstraintLayout>





        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_contact_us"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How we can help you"
            android:textSize="@dimen/dp_20"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/black"
            />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_call_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@drawable/bg_breakfast_time"
                android:layout_marginTop="@dimen/dp_20"
                >



                <ImageView
                    android:id="@+id/img_call_us"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_phone_contact_us"
                    app:tint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/t_call_us"/>



                <TextView
                    android:id="@+id/t_call_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="Call us:"

                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_20"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintStart_toEndOf="@+id/img_call_us"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/t_call_us_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_18"
                    app:layout_constraintStart_toStartOf="@+id/t_call_us"
                    app:layout_constraintTop_toBottomOf="@+id/t_call_us" />






            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/cons_email_us"

                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@drawable/bg_breakfast_time"
                android:layout_marginTop="@dimen/dp_20"
                >



                <ImageView
                    android:id="@+id/img_email_us"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_email_contact_us"
                    app:tint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/t_email_us"/>



                <TextView
                    android:id="@+id/t_email_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="Email Us:"

                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_20"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintStart_toEndOf="@+id/img_email_us"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/t_email_us_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_18"
                    app:layout_constraintStart_toStartOf="@+id/t_email_us"
                    app:layout_constraintTop_toBottomOf="@+id/t_email_us" />






            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>